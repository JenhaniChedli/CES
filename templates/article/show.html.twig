{% endblock %}

{% block newscript %}
    <script src="{{ asset('js/plugins/blueimp/jquery.blueimp-gallery.min.js') }}"></script>

{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content  animated fadeInRight article">
        <div class="row justify-content-md-center">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <a href="{{ path('article_index') }}" class="ared"><i class="fa fa-arrow-left"></i> back to list</a>
                        <div class="float-right row ared">
                            <button class="btn btn-white btn-xs" type="button"><a href="{{ path('article_edit', {'id': article.id}) }}" class="ared"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a></button>
                            {{ include('article/_delete_form.html.twig') }}
                        </div>
                        <br>
                        <div class="text-center ">
                            <span class="text-muted"><i class="fa fa-clock-o"></i>{{ article.datedecreation ? article.datedecreation|date('Y-m-d') : '' }}</span>
                            <h1>
                                {{ article.titre }}
                            </h1>

                        </div>
                        <p>&emsp;&emsp;&emsp;
                            {{ article.description }}
                        </p>
                        <hr>
                        <p>
                            Type d'article :  {{ article.type }}.<br>
                            Created by : {{ article.createby }}.
                        </p>

                        {{ article.images ? article.images|json_encode : '' }}
                        {{ article.videos ? article.videos|json_encode : '' }}
                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
