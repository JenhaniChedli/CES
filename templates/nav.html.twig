<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Elife!{% endblock %}</title>
    <link rel="alternate icon" class="js-site-favicon" type="image/png" href="{{ asset('img/favicon-32x32.png')}}">

    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css')}}" rel="stylesheet">
        <link href="{{ asset('css/animate.css')}}" rel="stylesheet">
        <link href="{{ asset('css/style.css')}}" rel="stylesheet">
        <link href="{{ asset('font-awesome/css/font-awesome.css')}}" rel="stylesheet">
    {% endblock %}
    {% block newscript %} {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.1.1.min.js')}}"></script>
        <script src="{{ asset('js/popper.min.js')}}"></script>
        <script src="{{ asset('js/bootstrap.js')}}"></script>
        <script src="{{ asset('js/plugins/metisMenu/jquery.metisMenu.js')}}"></script>
        <script src="{{ asset('js/style.js')}}"></script>
        <script src="{{ asset('js/plugins/slimscroll/jquery.slimscroll.min.js')}}"></script>
        <script src="{{ asset('js/plugins/pace/pace.min.js') }}"></script>
    {% endblock %}

</head>
<body >
<div id="wrapper">

        <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        <img alt="image" class="rounded-circle" width="60px" height="60px" src="{{ asset('img/blanc.png')}}"/>
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="block m-t-xs font-bold">{{  app.user.email }}</span>
                            <span class="text-muted text-xs block">{{  app.user.roles[0] |capitalize }} <b class="caret"></b></span>
                        </a>
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                        </ul>
                    </div>
                    <div class="logo-element">
                        <img alt="image" class="rounded-circle" width="60px" height="60px" src="{{ asset('img/blanc.png')}}"/>
                    </div>
                </li>
                {% block active %}
                <li  >
                    <a href="{{ path('dashboard') }}"><i class="fa fa-th-large"></i> <span class="nav-label">Tableaux de bord</span></a>
                </li>
                <li>
                    <a href="{{ path('article_index') }}"><i class="fa fa-newspaper-o"></i> <span class="nav-label">Articles</span></a>
                </li>
                <li>
                    <a href="{{ path('staff_index') }}"><i class="fa fa-users"></i> <span class="nav-label">Ã‰quipe de travail</span></a>
                </li>
                <li>
                    <a href="{{ path('club_index') }}"><i class="fa fa-code"></i><span class="nav-label">Club</span></a>
                </li>
                {% endblock %}
            </ul>

        </div>
    </nav>
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn bg-navy " href="#"><i class="fa fa-bars"></i> </a>
                    </div>

                    <ul class="nav navbar-top-links navbar-right">
                        <li> <span> Welcome to <strong>Centre Elife Siliana</strong> Admin Dashboard.</span></li>
                        <li>
                            <a href="{{ path('app_logout') }}" class="ared">
                                <i class="fa fa-sign-out"></i> Log out
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>

            <div class="row">
                <div class="col-lg-12">

                    {% block body %}{% endblock %}
                </div>
            </div>

            <div class="footer">
                <div class="float-right">
                    <strong>Copyright</strong> Club Elife Tech Up &copy; 2021
                </div>
                <div>
                    <img src="{{ asset('img/favicon-32x32.png')}}" height="20px" alt="elife">
                    Centre <strong>Elife</strong> Siliana.
                </div>
            </div>
        </div>

</div>
</body>
<footer>
    {% block footer %} {% endblock %}
</footer>
</html>
