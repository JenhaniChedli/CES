{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Tableau Staff</h5>
                <div class="ibox-tools">
                    <a href="{{ path('staff_new') }}"><i class="fa fa-plus" aria-hidden="true"></i> Add New </a>
                </div>
            </div>

            <div class="ibox-content">
                <input type="text" class="form-control form-control-sm m-b-xs" id="filter"
                       placeholder="Search in table">

                <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Poste</th>
                <th>PhoneNumber</th>
                <th>Photo</th>
                <th>description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for staff in staff %}
            <tr>
                <td>{{ staff.id }}</td>
                <td>{{ staff.firstname }}</td>
                <td>{{ staff.lastname }}</td>
                <td>{{ staff.Email }}</td>
                <td>{{ staff.poste }}</td>
                <td>{{ staff.phoneNumber }}</td>
                <td>{{ staff.photo }}</td>
                <td>{{ staff.description|slice(0, 75)}} ... </td>

                <td>
                    <div class="row">
                        <a href="{{ path('staff_show', {'id': staff.id}) }}" class="ared"><i class="fa fa-eye " aria-hidden="true"></i> Show </a><br>
                        <a href="{{ path('staff_edit', {'id': staff.id}) }}" class="ared"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="100%">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="100%">
                            <ul class="pagination float-right"></ul>
                        </td>
                    </tr>
                    </tfoot>
    </table>
            </div>
        </div>
    </div>
</div>
